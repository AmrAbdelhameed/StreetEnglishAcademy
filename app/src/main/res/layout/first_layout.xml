<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EEEE"
    tools:context="com.example.amr.streetenglishacademy.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/i1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/el2ola"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/i2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/eltania"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/i3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/eltalta"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/i4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/elrab3a"
                android:clickable="true"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>