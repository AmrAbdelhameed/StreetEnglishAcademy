<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EDED"
    tools:context="com.example.amr.streetenglishacademy.Login">

    <TextView
        android:id="@+id/textname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter Your Name *"
        android:textSize="@dimen/_20sp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/_8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp" />

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sp"
        android:hint="Enter Here"
        android:inputType="textPersonName"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@+id/textname"
        android:layout_marginLeft="@dimen/_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/_8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:onClick="btnUserLogin_Click"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sp"
        android:layout_marginRight="@dimen/_8dp"
        app:layout_constraintRight_toRightOf="@+id/txtEmailLogin"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailLogin" />

</android.support.constraint.ConstraintLayout>
