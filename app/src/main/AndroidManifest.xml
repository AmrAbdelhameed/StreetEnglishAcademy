<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amr.streetenglishacademy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconne"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="Street English Academy"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amr.streetenglishacademy.MainActivity" />
        </activity>
        <activity
            android:name=".ImageUser"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".Evaluation"
            android:screenOrientation="portrait"
            android:label="Your Feedback" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:label="Registration" />
        <activity
            android:name=".ShowAllReviews"
            android:screenOrientation="portrait"
            android:label="Show All Reviews">
        </activity>
        <activity android:name=".DetailsReview"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>